<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence"
	version="1.0">

	<persistence-unit name="PersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.mario.java.restful.api.hibernate.jpa.domain.UserDomain</class>
		<!-- <jta-data-source></jta-data-source> -->
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/restful_api" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="cache.provider_class" value="org.hibernate.cache.internal.NoCacheProvider" />
			<property name="show_sql" value="true" />
			<property name="format_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>